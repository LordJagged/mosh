}

Number10: Object = {
    <e: Prefix10?> <c: Complex10> => {
        match e {
            Some(Some(is_exact)) => {
                if is_exact {
                    exact(gc, c)
                } else {
                    inexact(gc, c)
                }
            },
            Some(None) | None => {
                // To handle #e1e1000.
                // See below in decimal10 section.
                if *is_inexact_context {
                    inexact(gc, c)
                } else {
                    c
                }
            },
        }
    },
}

