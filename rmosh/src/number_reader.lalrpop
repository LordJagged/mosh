UReal10: Object = {
    UInteger10 =>? {
        match read_uinteger10(gc, &<>) {
            Ok(obj) => Ok(obj),
            Err(err) => {
                Err(ParseError::User { error: err })
            }
        }
    },
    <numer: UInteger10> "/" <denom: UInteger10> =>? {
        match (BigInt::from_str(&numer), BigInt::from_str(&denom)) {
            (Ok(n), Ok(d)) => {
                if d == BigInt::from_isize(0).unwrap() {
                    Err(ParseError::User {
                        error: SchemeError::division_by_zero("read", &format!("number={} denom={}", n, d), &[])
                    })
                } else {
                    Ok(Object::Ratnum(gc.alloc(Ratnum::new(n, d))))
                }
            }
            (Err(err), _) => {
                Err(ParseError::User {
                    error: SchemeError::lexical_violation_read_error("read", &format!("number parse error: {:?}: token: {}", err, numer))
                })
            }
            (_, Err(err)) => {
                Err(ParseError::User {
                    error: SchemeError::lexical_violation_read_error("read", &format!("number parse error: {:?} token: {}", err, denom))
                })
            }
        }
    },
    Decimal10 =>? {
        // To handle #e1e1000 case we parse 1e1000 style as exact.
        // Then later makes them inexact if there's not #e prefix.
        let re = Regex::new(r"^(\d+)e(\-?\d+)$").unwrap();
        if let Some(captures) = re.captures(&<>) {
            match (isize::from_str(&captures[1]), isize::from_str(&captures[2])) {
                (Ok(lhs), Ok(rhs)) => {
                    *is_inexact_context = true;
                    let x = numbers::expt(gc, Object::Fixnum(10), Object::Fixnum(rhs));
                    return Ok(numbers::mul(gc, Object::Fixnum(lhs), x))
                }
                _ => { /* fall through */ }
            }
        }
        match f64::from_str(&<>) {
            Ok(n) => {
                Ok(Object::Flonum(Flonum::new(n)))
            }
            Err(err) => {
                Err(ParseError::User {
                    error: SchemeError::lexical_violation_read_error("reader", &format!("number parse error: {:?} token: {}", err, <>))
                })
            }
        }
    }
}

