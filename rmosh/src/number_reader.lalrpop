Number10: Object = {
    <e: Prefix10?> <c: Complex10> => {
        match e {
            Some(Some(is_exact)) => {
                if is_exact {
                    exact(gc, c)
                } else {
                    inexact(gc, c)
                }
            },
            Some(None) | None => {
                c
            },
        }
    },
}

